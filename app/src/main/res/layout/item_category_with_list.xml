    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_cat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="@dimen/_16sdp"
        android:layout_margin="@dimen/_7sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Category Name"></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_category_video"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        tools:itemCount="10"
        android:layout_margin="@dimen/_8sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_category"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/cardview_dark_background"></TextView>
