<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.creditplanning.TotalLoanActivity">
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:background="@drawable/gradient_green_header">

        <RelativeLayout
            android:id="@+id/img_back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent">

            <ImageView

                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/back"></ImageView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="क्रेडिट कैलकुलेटर"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"></TextView>
        <!--   <ImageView
               android:layout_width="@dimen/_18sdp"
               android:layout_height="@dimen/_18sdp"
               android:layout_centerVertical="true"
               android:layout_margin="@dimen/_10sdp"
               android:layout_alignParentRight="true"
               android:background="@drawable/edit"></ImageView>-->

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="कुल क्रेडिट आवश्यक"></TextView>


                <EditText
                    android:id="@+id/et_totalcredit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:padding="@dimen/_7sdp"
                    android:inputType="number"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/rectangle_rounded_login"></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:text="आपका निवेश"></TextView>


            <EditText
                android:id="@+id/et_yourinvesment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:padding="@dimen/_7sdp"
                android:inputType="number"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/rectangle_rounded_login"></EditText>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_25sdp"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_16sdp"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:paddingLeft="@dimen/_5sdp"
                   android:layout_marginLeft="@dimen/_17sdp"

                   android:text="परिकलित ऋण"></TextView>
               <TextView
                   android:id="@+id/tv_loanamount"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/_16sdp"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:paddingLeft="@dimen/_5sdp"
                   android:inputType="number"
                   android:layout_marginLeft="@dimen/_17sdp"
                   android:text=""></TextView>

           </LinearLayout>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/rectangle_rounded_green"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:text="प्रस्तुत"
                android:textSize="@dimen/_17sdp"
                android:layout_gravity="center_horizontal"
                ></Button>

        </LinearLayout>
    </ScrollView>
</LinearLayout>